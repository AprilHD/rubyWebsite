<form action="/Comments/new" method="post">
	<div>
		<label><b>First Name</b></label>
		<input type="text" placeholder="Your First Name" name='comment[firstname]' required><br>

		<label><b>Last Name</b></label>
		<input type="text" placeholder="Your Last Name" name="comment[lastname]" required><br>

		<label><b>Subject</b></label>
		<input type="text" placeholder="Enter a subject of your comment" name="comment[title]" required><br>

		<label><b>Comment</b></label>
		<textarea placeholder="Comments..." name="comment[context]" rows="10" cols="50" required></textarea>

		<div>
		  <button type="reset">Clear</button>
		  <button type="submit">Post</button>
		</div>
		
	</div>
</form> 